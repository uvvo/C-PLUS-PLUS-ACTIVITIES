// Program to add numbers until the user enters zero
#include <stdio.h>
int main()
{
	//VARIABLE
    double num, sum = 0;

    do
    {
        printf("Enter a number: ");
        scanf("%lf", &num);
        sum += num;
    }
    //CONDITION
    while(num != 0.0);

    printf("Sum = %.2lf",sum);

    return 0;
}
