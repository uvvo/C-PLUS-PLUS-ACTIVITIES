// Program to display a number if it is negative
#include <stdio.h>
int main() {
    int num;

    printf("Enter an integer: ");
    scanf("%d", &num);

    // if number is less than 0
    if (num < 10) {
        printf("You entered %d\n", num);
    }

    printf("The if statement is easy.");

    return 0;
}
